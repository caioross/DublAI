import librosa
import numpy as np
from sklearn.model_selection import train_test_split
import os

filenames_src = []
filenames_tgt = []

src_path = input("Insira o caminho para a pasta dos arquivos de origem: ")
for file in os.listdir(src_path):
    if file.endswith(".mp4"):
        filenames_src.append(os.path.join(src_path, file))

tgt_path = input("Insira o caminho para a pasta dos arquivos de destino: ")
for file in os.listdir(tgt_path):
    if file.endswith(".mp4"):
        filenames_tgt.append(os.path.join(tgt_path, file))

samples_src = []
samples_tgt = []

for file in filenames_src:
    audio, sr = librosa.load(file)
    samples_src.append(audio)

for file in filenames_tgt:
    audio, sr = librosa.load(file)
    samples_tgt.append(audio)

X_train, X_test, y_train, y_test = train_test_split(samples_src, samples_tgt, test_size=0.2, random_state=42)

np.save("X_train.npy", X_train)
np.save("X_test.npy", X_test)
np.save("y_train.npy", y_train)
np.save("y_test.npy", y_test)
